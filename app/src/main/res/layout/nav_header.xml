<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_background_gradient"
    android:padding="24dp"
    android:clipToOutline="true">

    <!-- Account Title -->
    <TextView
        android:id="@+id/account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <!-- Account Description -->
    <TextView
        android:id="@+id/account_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your Gmail address to sync your account"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3"
        app:layout_constraintTop_toBottomOf="@id/account_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- EditText for Gmail Input -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Gmail"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/account_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:textColorHint="@android:color/darker_gray"/>

    <!-- Sync Button -->
    <Button
        android:id="@+id/sync_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@color/colorAccent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Display Synced Gmail Button -->
    <Button
        android:id="@+id/synced_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synced Gmail"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/sync_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        android:gravity="center"
        android:background="@drawable/rounded_button"/>

    <!-- Logout or Remove Gmail Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/synced_email_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        android:gravity="center"
        android:background="@color/colorError"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
